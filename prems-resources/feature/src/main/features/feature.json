      "frequency.in.days": 7,
      "export.schedule": "0 0 2 ? * SAT *",
      "questionnaires.to.be.exported": [
        "/Questionnaires/CPESIC",
        "/Questionnaires/OAIP",
        "/Questionnaires/OED",
        "/Questionnaires/Rehab"
