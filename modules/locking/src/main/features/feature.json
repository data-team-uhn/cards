  "configurations":{
    "org.apache.sling.jcr.repoinit.RepositoryInitializer~locking":{
      "service.ranking:Integer":300,
      "scripts": [
        // Locking and unlocking subjects and appropriate visits
        "create service user locking \n set ACL for locking \n   allow jcr:all on /Forms, /Subjects \n end"
        // TODO: Once locking and unlocking permissions are implemented, deny locked node editing to everyone
        // "set ACL for everyone \n deny rep:write,jcr:versionManagement on /Forms,/Subjects restriction(cards:locked) \n end"
      ]
    },
    "org.apache.sling.serviceusermapping.impl.ServiceUserMapperImpl.amended~patientUi":{
      "user.mapping":[
        "io.uhndata.cards.locking:locking=[locking]"
      ]
    }
  }
}
